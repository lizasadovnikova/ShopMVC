@model ShopInfrastructure.ViewModels.ItemEditViewModel

<h1>Редагування товару</h1>
<hr />
<div class="row">
    <div class="col-md-5">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Країна</label>
                <input asp-for="CountryName" id="countryInput" class="form-control" autocomplete="off" />
                <input type="hidden" asp-for="CountryId" id="countryId" />
                <span asp-validation-for="CountryId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Категорія</label>
                <input asp-for="CategoryName" id="categoryInput" class="form-control" autocomplete="off" />
                <input type="hidden" asp-for="CategoryId" id="categoryId" />
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" type="number" step="0.5" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Поточне фото</label><br />
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <img src="@Model.ImagePath" style="max-width:200px;" />
                }
                else
                {
                    <span>Фото відсутнє</span>
                }
            </div>

            <div class="form-group">
                <label asp-for="ImageFile">Нове фото</label>
                <input asp-for="ImageFile" type="file" class="form-control" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>

            <div class="mt-3">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <style>
        .ui-autocomplete {
            z-index: 2000;
        }</style>
    <script>
        $(function () {
            $("#countryInput").autocomplete({
                source: function (request, response) {
                    $.getJSON("/Lookup/Countries", { term: request.term }, function (data) {
                        response($.map(data, function (x) {
                            return { label: (x.label || "").trim(), value: (x.value || "").trim(), id: x.id || null };
                        }));
                    });
                },
                minLength: 3,
                delay: 300,
                appendTo: "body",
                select: function (e, ui) {
                    $("#countryInput").val(ui.item.label);
                    if (ui.item.id) $("#countryId").val(ui.item.id);
                    return false;
                }
            });

            $("#categoryInput").autocomplete({
                source: function (request, response) {
                    $.getJSON("/Lookup/Categories", { term: request.term }, function (data) {
                        response($.map(data, function (x) {
                            return { label: (x.label || "").trim(), value: (x.value || "").trim(), id: x.id || null };
                        }));
                    });
                },
                minLength: 3,
                delay: 300,
                appendTo: "body",
                select: function (e, ui) {
                    $("#categoryInput").val(ui.item.label);
                    if (ui.item.id) $("#categoryId").val(ui.item.id);
                    return false;
                }
            });
        });
    </script>
}
