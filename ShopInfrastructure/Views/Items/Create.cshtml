@model ShopInfrastructure.ViewModels.ItemViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Додавання товара до категорії @ViewBag.CategoryName</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create"
              asp-route-categoryId="@ViewBag.CategoryId"
              method="post"
              enctype="multipart/form-data">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="countryInput">Країна</label>
                <input id="countryInput" name="CountryName" class="form-control" autocomplete="off" />
                <span asp-validation-for="CountryName" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" type="number" step="0.5" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>

            <input type="hidden" value="@ViewBag.CategoryId" name="categoryId" />

            <div style="height: 25px;"></div>
            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(function () {
            $("#countryInput").autocomplete({
                source: function (request, response) {
                    $.getJSON("/Lookup/Countries", { term: request.term }, response);
                },
                minLength: 3,
                delay: 300,
                select: function (event, ui) {
                    $("#countryInput").val(ui.item.label);
                    return false;
                }
            });
        });
    </script>
}
